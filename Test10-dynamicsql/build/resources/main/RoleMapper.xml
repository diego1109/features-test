<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yang.mapper.RoleMapper">

  <select id="findRoleIf" parameterType="string" resultType="com.yang.mapper.RoleMapper">
    select
        id,
        role_name roleName,
        note
    from t_role where 1=1
  </select>

  <select id="findRoleIf2" resultType="com.yang.mapper.RoleMapper">
    select
        id,
        role_name roleName,
        note
    from t_role;
  </select>
</mapper>